extends base
block content 
    if(errorMessage)
        span #{errorMessage}
    form(method="POST")
        input(name="name",placeholder="name",type="text",required,value=loggedInUsers.name)
        input(placeholder="Email",name="email",type="email",required,value=loggedInUsers.email)
        input(name="username",placeholder="Username",type="text",required,value=loggedInUsers.username)
        input(name="location",placeholder="Location",required,value=loggedInUsers.location)
        input(type="submit",value="Update Profile")

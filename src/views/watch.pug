extends base.pug
block content
    video(src="/"+video.fileUrl,controls)
    div
        p=video.description
        small=video.createdAt
    div 
        small Uploaded By #{owner.name}
    if String(video.owner)===String(loggedInUsers._id)
        a(href=`${video.id}/edit`) Edit Video →
        br
        a(href=`${video.id}/delete`) Delete Video →
